<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.github.panpf.zoomimage.sample.ui.view.widget.VerticalTabLayout
        android:id="@+id/tabPagerVerTabLayout"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:indicator_color="@color/colorOnPrimary"
        app:indicator_gravity="right"
        app:tab_mode="fixed"
        app:tab_textColor="@color/colorOnPrimary"
        app:tab_textSelectedColor="@color/colorOnPrimary" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/tabPagerVerPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>